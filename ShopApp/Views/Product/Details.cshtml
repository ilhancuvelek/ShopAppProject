@model Product

@section Categories
{
    @await Component.InvokeAsync("Categories")
}


<div class="card">
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img class="card-img" src="~/img/@Model.ImageUrl" />
            </div>
            <div class="col-md-9">

                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">
                    <small class="text-muted">3 days ago</small>
                </p>
            </div>
        </div>
    </div>
</div>